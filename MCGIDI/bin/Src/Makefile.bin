.PHONY: default bin clean realclean

local_CXXFLAGS += $(LIB_PATHS) -I$(GIDI_PATH)/Test/Utilities -L$(GIDI_PATH)/Test/Utilities \
        -I$(MCGIDI_PATH)/Test/Utilities -L$(MCGIDI_PATH)/Test/Utilities

LIBS = -lGIDI_testUtilities -lMCGIDI_testUtilities -lMCGIDI -lGIDI -lPoPI -lRISI -lHAPI -lLUPI \
		-lnumericalfunctions -lstatusMessageReporting -lexpat -lpugixml $(HDF5_LIBS)

EXES = $(CppSources:.cpp=)

default: bin

%: %.cpp
	echo "    "$@
	$(CXX) $(local_CXXFLAGS) $< -o $@ $(LIBS)

bin: $(EXES)
	cp $(EXES) ../..

clean:
	rm -f $(EXES)
	rm -f ../../$(EXES)

realclean: clean
	rm -rf *.dSYM
