.PHONY: default bin clean realclean

local_CXXFLAGS += $(LIB_PATHS)

LIBS = -lPoPI -lpugixml -lLUPI -lHAPI -lnumericalfunctions -lstatusMessageReporting $(HDF5_LIBS)

EXES = $(CppSources:.cpp=)

default: bin

%: %.cpp
	echo "    "$@
	$(CXX) $(local_CXXFLAGS) $< -o $@ $(LIBS)

bin: $(EXES)
	cp $(EXES) ../..

clean:
	rm -f $(EXES)

realclean: clean
	rm -rf *.dSYM
